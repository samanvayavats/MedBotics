{
  "compilerOptions": {
    "target": "ES6",                     
    "module": "nodenext",                
    "strict": true,                      
    "esModuleInterop": true,             
    "skipLibCheck": true,                
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",                  
    "rootDir": "./src"                   
  },
  "include": ["src"],                    
  "exclude": ["node_modules", "dist"]    
}
